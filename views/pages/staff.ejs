<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Bootstrap CSS (CDN, 5.x - uses major 5 so you get latest 5.x) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Site CSS (load after Bootstrap so site styles can override) -->
<link rel="stylesheet" href="/css/header.css">
<link rel="stylesheet" href="/css/main.css">
</head>
<body>
     <%- include('../layouts/header') %>
    <main class="container my-5">
        <h1 class="mb-4">Faculty & Staff</h1>

        <% if (staff && staff.length) { %>
            <% 
                // Group staff by section
                const sections = {};
                staff.forEach(function(st) {
                    const section = st.section || 'Other';
                    if (!sections[section]) {
                        sections[section] = [];
                    }
                    sections[section].push(st);
                });

                // helper to split an array into chunks of given size
                function chunkArray(arr, size) {
                    const chunks = [];
                    for (let i = 0; i < arr.length; i += size) {
                        chunks.push(arr.slice(i, i + size));
                    }
                    return chunks;
                }
            %>

            <% Object.keys(sections).forEach(function(sectionName) { %>
                <section class="staff-section">
                    <h2 class="mt-5 mb-3 staff-title"><%= sectionName %></h2>

                    <% const groups = chunkArray(sections[sectionName], 3); %>
                    <% groups.forEach(function(group) { %>
                        <% const groupLen = group.length; %>
                        <% const rowClass = (groupLen < 3) ? 'row justify-content-center g-4' : 'row g-4'; %>
                        <div class="<%= rowClass %>">
                            <% group.forEach(function(st) { %>
                                <div class="col-12 col-md-4 d-flex">
                                    <div class="card flex-fill staff-card">
                                        <div class="row g-0 align-items-center">
                                            <div class="col-4">
                                                <img src="<%= st.photo %>" class="img-fluid rounded-start" alt="<%= st.name %>">
                                            </div>
                                            <div class="col-8">
                                                <div class="card-body py-2 px-2">
                                                    <h5 class="card-title mb-1" style="font-size:1rem;"><%= st.name %></h5>
                                                    <p class="card-text mb-1 text-muted" style="font-size:0.9rem;"><%= st.role %></p>
                                                    <div class="d-flex mb-1">
                                                        <a href="mailto:<%= st.email %>" class="btn btn-link p-0 me-2" title="Email <%= st.name %>"><img src="/images/icons/envelope-at.svg" alt="email" style="width:20px"></a>
                                                        <a href="https://calendly.com/m<%= st.email.split('@')[0] %>/parent-teacher-conference-fall-2025" class="btn btn-link p-0" target="_blank" title="Schedule"><img src="/images/icons/calendar3.svg" alt="calendar" style="width:20px"></a>
                                                    </div>
                                                    <p class="mb-0" style="font-size:0.85rem;"><a href="mailto:<%= st.email %>"><%= st.email %></a></p>
                                                    <p class="roomNum mb-0" style="font-size:0.85rem;"><%= st.bio %></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% }); %>
                </section>
            <% }); %>
        <% } else { %>
            <p>No staff members found.</p>
        <% } %>
    </main>

    <%- include('../layouts/footer') %>
</body>
</html>